    <node id="BandSelect">
        <operator>BandSelect</operator>
        <sources>
            <sourceProduct refid="LinearToFromdB"/>
        </sources>
        <parameters>
            <selectedPolarisations/>
            <sourceBands>Sigma0_VH_db</sourceBands>
            <bandNamePattern/>
        </parameters>
    </node>
    <node id="Write">
        <operator>Write</operator>
        <sources>
            <sourceProduct refid="BandSelect"/>
        </sources>
        <parameters>
            <file>${output_vh}</file>
            <formatName>GeoTiff</formatName>
        </parameters>

    </node>


    <node id="BandSelect1">
        <operator>BandSelect</operator>
        <sources>
            <sourceProduct refid="LinearToFromdB"/>
        </sources>
        <parameters>
            <selectedPolarisations/>
            <sourceBands>Sigma0_VV_db</sourceBands>
            <bandNamePattern/>
        </parameters>
    </node>
    <node id="Write">
        <operator>Write</operator>
        <sources>
            <sourceProduct refid="BandSelect1"/>
        </sources>
        <parameters>
            <file>${output_vv}</file>
            <formatName>GeoTiff</formatName>
        </parameters>

    </node>

    <node id="BandSelect2">
        <operator>BandSelect</operator>
        <sources>
            <sourceProduct refid="testnode"/>
        </sources>
        <parameters>
            <selectedPolarisations/>
            <sourceBands>NRPB</sourceBands>
            <bandNamePattern/>
        </parameters>
    </node>
    <node id="Write">
        <operator>Write</operator>
        <sources>
            <sourceProduct refid="BandSelect2"/>
        </sources>
        <parameters>
            <file>${output_nrpb}</file>
            <formatName>GeoTiff</formatName>
        </parameters>

    </node>



